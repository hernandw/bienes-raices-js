<div class="py-10">
  <h1 class="my-10 text-4xl font-extrabold text-center">Raices
    <span class="font-normal">Sueños</span></h1>
  <h2 class="text-center text-2xl font-extrabold"></h2>
  <div
    class="bg-white shadow rounded mx-auto py-8 px-4 max-w-4xl my-10 md:px-10"
  >
    <form class="space-y-5" action="/propiedades/crear" method="POST">
      <div class="space-y-5">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Información
          General</h3>
        <p class="text-gray-600">Ingresa la información de tu propiedad</p>
        
        <div>
          <label
            class="block text-sm uppercase text-gray-500 mb-3 font-bold"
            for="title"
          >Titulo de la propiedad:</label>
          <input
            class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400"
            type="text"
            id="title"
            placeholder="Titulo de la Propiedad, ej. Casa en la Playa"
            name="title"
            value="{{old.title}}"
          />
        </div>
        <div>
          <label
            class="block text-sm uppercase text-gray-500 mb-3 font-bold"
            for="description"
          >Descripción:</label>
         
          <textarea
            name="description"
            id="description"
            class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400"
            placeholder="Descripción de la Propiedad"
          ></textarea>
        </div>
        <div class="md:flex md:gap-4 space-y-5 md:space-y-0">
            <div class="md:w-1/2">
            <label
              class="block text-sm uppercase text-gray-500 mb-3 font-bold"
              for="category"
            >Categoria:</label>
            <select
              class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"
              name="category"
              id="category"
            >
              <option value="" disabled selected>-- Seleccione una --</option>
              {{#each categories}}
              <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="md:w-1/2">
            <label
              class="block text-sm uppercase text-gray-500 mb-3 font-bold"
              for="price"
            >Precio:</label>
            <select
              class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"
              name="price"
              id="price"
            >
              <option value="" disabled selected>-- Seleccione una --</option>
              {{#each prices}}
              <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
          
        </div>
         <div class="md:flex md:gap-4 space-y-5 md:space-y-0">
            <div class="md:w-1/3">
            <label
              class="block text-sm uppercase text-gray-500 mb-3 font-bold"
              for="room"
            >Habitaciones:</label>
            <select
              class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"
              name="rooms"
              id="room"
            >
              <option value="" disabled selected>-- Seleccione una --</option>
              {{#each rooms}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>
          <div class="md:w-1/3">
            <label
              class="block text-sm uppercase text-gray-500 mb-3 font-bold"
              for="parking"
            >Estacionamiento:</label>
            <select
              class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"
              name="parking"
              id="parking"
            >
              <option value="" disabled selected>-- Seleccione una --</option>
              {{#each rooms}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>
          <div class="md:w-1/3">
            <label
              class="block text-sm uppercase text-gray-500 mb-3 font-bold"
              for="wc"
            >Baños:</label>
            <select
              class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400"
              name="wc"
              id="wc"
            >
              <option value="" disabled selected>-- Seleccione una --</option>
              {{#each rooms}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
          </div>
          
        </div>

      </div>
      <div class="border-gray-200 border-t-2 space-y-5">
<h3 class="text-lg leading-6 font-medium text-gray-900 mt-4">Ubicación</h3>
<p class="text-gray-600">Ubica la propiedad en el mapa</p>
    </div>
    <div id="map" class="w-full h-96"></div>
    <div>
      <p class="street"></p>
    </div>
    <input type="hidden" name="street" id="street">
    <input type="hidden" name="lat" id="lat">
    <input type="hidden" name="lng" id="lng">
    
    
    
    </form>
    

    </div>
  </div>

  

</div>
